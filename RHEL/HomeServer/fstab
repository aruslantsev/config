/dev/mapper/system-root		/                       ext4	defaults		0 0
/dev/mapper/system-home		/home                   ext4	defaults,nodev		0 0
/dev/mapper/system-tmp		/tmp			ext4	defaults,noexec,nodev	0 0
/dev/mapper/system-vartmp	/var/tmp		ext4	defaults,noexec,nodev	0 0
/dev/mapper/system-log		/var/log		ext4	defaults,noexec,nodev	0 0
/dev/mapper/system-vm		/var/lib/libvirt	ext4	defaults		0 0
